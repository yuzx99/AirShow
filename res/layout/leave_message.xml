<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <include layout="@layout/titlebar"/>

    <EditText
         android:id="@+id/textContentMessage"
        android:layout_width="326dp"
        android:layout_height="161dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:alpha="0.85"
        android:background="@drawable/text_input_box"
        android:gravity="top"
        android:padding="18dp"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/ic_input_box_cursor" />

    <Button
        android:id="@+id/btnSubmitMsg"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:alpha="0.85"
        android:text="@string/msg_submit"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/selector_dark_button" />

</LinearLayout>